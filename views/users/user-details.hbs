    <input type="checkbox" name="admin" value="{{admin}}" {{#if admin}}checked{{/if}}   />

     <label>Standard User Role Enabled:</label>
     <input type="checkbox" name="standarduser" value="{{standarduser}}" {{#if standarduser}}checked{{/if}}  />

